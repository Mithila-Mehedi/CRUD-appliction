<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>

    <div class="container">
        <div class="my-4">
            <h4>Create New Contact</h4>
            <form action='/contacts' class="form-inline" method="POST"> 
                <div class="form-group mr-3">
                    <input type='text' name='name' placeholder="Name" class="form-control">

                </div>
                <div class="form-group mr-3">
                    <input type='text' name='email' placeholder="Name" class="form-control"/>

                </div>
                <div class="form-group mr-3">
                    <input type='text' name='phone' placeholder="Name" class="form-control"/>

                </div>
                <div class="form-group mr-3">
                    <input type='hidden' name='id' />

                </div>

            </form>

        </div>
        <h4>your contact</h4>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Phone</th>
                    <th scope="col">Action</th>
                </tr>
    
            </thead>
            <tbody>
                <% for (let contact of contacts){ %> 
                    <tr>
                    <td><%= contact.name %> </td>
                    <td><%= contact.email %> </td>
                    <td><%= contact.phone %> </td>
                    <td>
                        <button class="btn btn-warning btn-sm">
                            EDIT</button>
                        <a href='/contacts/delete/<%= contact._id %> '
                            class="btn btn-danger btn-sm"
                            >
                        DELETE
                        </a>
                    </td>
                </tr>
                <% } %> 
            </tbody>
            

        </table>

    </div>
    


    

<!-- jQuery library -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<!-- Popper JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>

<!-- Latest compiled JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>